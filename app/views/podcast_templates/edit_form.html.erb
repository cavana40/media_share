<h1>
  Edit podcast #<%= @podcast.id %>
</h1>

<hr>

<!-- Form podcast start -->
<form action="/update_podcast/<%= @podcast.id %>" method="post">
<!-- Form podcast end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <!-- Input for title start -->
    <input type="text" id="title" name="title" class="form-control" value="<%= @podcast.title %>">
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <!-- Label and input for source start -->
  <div class="form-group">
    <label for="source">
      Source
    </label>

    <!-- Input for source start -->
    <input type="text" id="source" name="source" class="form-control" value="<%= @podcast.source %>">
    <!-- Input for source end -->
  </div>
  <!-- Label and input for source end -->

  <!-- Label and input for favorite_episode start -->
  <div class="form-group">
    <label for="favorite_episode">
      Favorite episode
    </label>

    <!-- Input for favorite_episode start -->
    <input type="text" id="favorite_episode" name="favorite_episode" class="form-control" value="<%= @podcast.favorite_episode %>">
    <!-- Input for favorite_episode end -->
  </div>
  <!-- Label and input for favorite_episode end -->

  <!-- Label and input for users_id start -->
  <div class="form-group">
    <label for="users_id">
      Users
    </label>

    <!-- Input for users_id start -->
    <input type="text" id="users_id" name="users_id" class="form-control" value="<%= @podcast.users_id %>">
    <!-- Input for users_id end -->
  </div>
  <!-- Label and input for users_id end -->

  <!-- Label and input for genre_topic start -->
  <div class="form-group">
    <label for="genre_topic">
      Genre topic
    </label>

    <!-- Input for genre_topic start -->
    <input type="text" id="genre_topic" name="genre_topic" class="form-control" value="<%= @podcast.genre_topic %>">
    <!-- Input for genre_topic end -->
  </div>
  <!-- Label and input for genre_topic end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <textarea id="description" name="description" class="form-control" rows="3"><%= @podcast.description %></textarea>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for comments start -->
  <div class="form-group">
    <label for="comments">
      Comments
    </label>

    <!-- Input for comments start -->
    <textarea id="comments" name="comments" class="form-control" rows="3"><%= @podcast.comments %></textarea>
    <!-- Input for comments end -->
  </div>
  <!-- Label and input for comments end -->

  <button class="btn btn-block btn-outline-secondary">
    Update podcast
  </button>
</form>

<hr>

<a href="/podcasts">
  Go back
</a>
