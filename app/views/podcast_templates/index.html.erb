<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All podcasts
    </h1>

    <a href="/podcasts/new" class="btn btn-block btn-outline-secondary">
      Add a new podcast
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Source
        </th>

        <th>
          Favorite episode
        </th>

        <th>
          Users
        </th>

        <th>
          Genre topic
        </th>

        <th>
          Description
        </th>

        <th>
          Comments
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @podcasts.each do |podcast| %>
      <tr>
        <!-- Display podcast.id start -->
        <td>
          <%= podcast.id %>
        </td>
        <!-- Display podcast.id end -->

        <!-- Display podcast.title start -->
        <td>
          <%= podcast.title %>
        </td>
        <!-- Display podcast.title end -->

        <!-- Display podcast.source start -->
        <td>
          <%= podcast.source %>
        </td>
        <!-- Display podcast.source end -->

        <!-- Display podcast.favorite_episode start -->
        <td>
          <%= podcast.favorite_episode %>
        </td>
        <!-- Display podcast.favorite_episode end -->

        <!-- Display podcast.users_id start -->
        <td>
          <%= podcast.users.email %>
        </td>
        <!-- Display podcast.users_id end -->

        <!-- Display podcast.genre_topic start -->
        <td>
          <%= podcast.genre_topic %>
        </td>
        <!-- Display podcast.genre_topic end -->

        <!-- Display podcast.description start -->
        <td>
          <%= podcast.description %>
        </td>
        <!-- Display podcast.description end -->

        <!-- Display podcast.comments start -->
        <td>
          <%= podcast.comments %>
        </td>
        <!-- Display podcast.comments end -->

        <!-- Display podcast.created_at start -->
        <td>
          <%= time_ago_in_words(podcast.created_at) %> ago
        </td>
        <!-- Display podcast.created_at end -->

        <!-- Display podcast.updated_at start -->
        <td>
          <%= time_ago_in_words(podcast.updated_at) %> ago
        </td>
        <!-- Display podcast.updated_at end -->

        <td>
          <a href="/podcasts/<%= podcast.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
