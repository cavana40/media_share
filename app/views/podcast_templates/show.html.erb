<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Podcast #<%= @podcast.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/podcasts" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @podcast.users %>
          <a href="/podcasts/<%= @podcast.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit podcast
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @podcast.users %>
          <a href="/delete_podcast/<%= @podcast.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete podcast
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <dd>
        <%= @podcast.title %>
      </dd>

      <dt>
        Source
      </dt>
      <dd>
        <%= @podcast.source %>
      </dd>

      <dt>
        Favorite episode
      </dt>
      <dd>
        <%= @podcast.favorite_episode %>
      </dd>

      <dt>
        Users
      </dt>
      <dd>
        <% if @podcast.users.present? %>
          <a href="/users/<%= @podcast.users_id %>">
            <%= @podcast.users.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Genre topic
      </dt>
      <dd>
        <%= @podcast.genre_topic %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @podcast.description %>
      </dd>

      <dt>
        Comments
      </dt>
      <dd>
        <%= @podcast.comments %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@podcast.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@podcast.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "podcast_templates/podcast_likes" %>
  </div>
</div>
