<!-- Validation failure messages -->
<% if @show.errors.any? %>
  <% @show.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit show #<%= @show.id %>
</h1>

<hr>

<!-- Form show start -->
<form action="/update_show/<%= @show.id %>" method="post">
<!-- Form show end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <!-- Input for title start -->
    <input type="text" id="title" name="title" class="form-control" value="<%= @show.title %>">
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <!-- Label and input for source start -->
  <div class="form-group">
    <label for="source">
      Source
    </label>

    <!-- Input for source start -->
    <input type="text" id="source" name="source" class="form-control" value="<%= @show.source %>">
    <!-- Input for source end -->
  </div>
  <!-- Label and input for source end -->

  <!-- Label and input for users_id start -->
  <!-- Label and input for users_id end -->

  <!-- Label and input for genre_topic start -->
  <div class="form-group">
    <label for="genre_topic">
      Genre topic
    </label>

    <!-- Input for genre_topic start -->
    <input type="text" id="genre_topic" name="genre_topic" class="form-control" value="<%= @show.genre_topic %>">
    <!-- Input for genre_topic end -->
  </div>
  <!-- Label and input for genre_topic end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <textarea id="description" name="description" class="form-control" rows="3"><%= @show.description %></textarea>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for comments start -->
  <div class="form-group">
    <label for="comments">
      Comments
    </label>

    <!-- Input for comments start -->
    <textarea id="comments" name="comments" class="form-control" rows="3"><%= @show.comments %></textarea>
    <!-- Input for comments end -->
  </div>
  <!-- Label and input for comments end -->

  <button class="btn btn-block btn-outline-secondary">
    Update show
  </button>
</form>

<hr>

<a href="/shows">
  Go back
</a>
