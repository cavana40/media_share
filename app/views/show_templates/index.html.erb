<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All shows
    </h1>

    <a href="/shows/new" class="btn btn-block btn-outline-secondary">
      Add a new show
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "show_templates/shows_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Source
        </th>

        <th>
          Users
        </th>

        <th>
          Genre topic
        </th>

        <th>
          Description
        </th>

        <th>
          Comments
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @shows.each do |show| %>
      <tr>
        <td>
          <%= show.id %>
        </td>

        <td>
          <%= show.title %>
        </td>

        <td>
          <%= show.source %>
        </td>

        <td>
          <% if show.users.present? %>
            <a href="/users/<%= show.users.id %>">
              <%= show.users.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= show.genre_topic %>
        </td>

        <td>
          <%= show.description %>
        </td>

        <td>
          <%= show.comments %>
        </td>

        <td>
          <%= time_ago_in_words(show.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(show.updated_at) %> ago
        </td>

        <td>
          <a href="/shows/<%= show.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @shows, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
