<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Users
        </th>

        <th>
          Films
        </th>

        <th>
          Shows
        </th>

        <th>
          Podcasts
        </th>

        <th>
          Articles
        </th>

        <th>
          Books
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @likes.each do |like| %>
      <tr>
        <!-- Display like.id start -->
        <td>
          <%= like.id %>
        </td>
        <!-- Display like.id end -->

        <!-- Display like.users_id start -->
        <td>
          <%= like.users.email %>
        </td>
        <!-- Display like.users_id end -->

        <!-- Display like.films_id start -->
        <td>
          <%= like.films.title %>
        </td>
        <!-- Display like.films_id end -->

        <!-- Display like.shows_id start -->
        <td>
          <%= like.shows.title %>
        </td>
        <!-- Display like.shows_id end -->

        <!-- Display like.podcasts_id start -->
        <td>
          <%= like.podcasts.title %>
        </td>
        <!-- Display like.podcasts_id end -->

        <!-- Display like.articles_id start -->
        <td>
          <%= like.articles.users_id %>
        </td>
        <!-- Display like.articles_id end -->

        <!-- Display like.books_id start -->
        <td>
          <%= like.books.title %>
        </td>
        <!-- Display like.books_id end -->

        <!-- Display like.created_at start -->
        <td>
          <%= time_ago_in_words(like.created_at) %> ago
        </td>
        <!-- Display like.created_at end -->

        <!-- Display like.updated_at start -->
        <td>
          <%= time_ago_in_words(like.updated_at) %> ago
        </td>
        <!-- Display like.updated_at end -->

        <td>
          <a href="/likes/<%= like.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
