<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All likes
    </h1>

    <a href="/likes/new" class="btn btn-block btn-outline-secondary">
      Add a new like
    </a>
  </div>
</div>

<!-- Ransack Code start -->

