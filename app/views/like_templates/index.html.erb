<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All likes
    </h1>

    <a href="/likes/new" class="btn btn-block btn-outline-secondary">
      Add a new like
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "like_templates/likes_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Users
        </th>

        <th>
          Films
        </th>

        <th>
          Shows
        </th>

        <th>
          Podcasts
        </th>

        <th>
          Articles
        </th>

        <th>
          Books
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @likes.each do |like| %>
      <tr>
        <td>
          <%= like.id %>
        </td>

        <td>
          <% if like.users.present? %>
            <a href="/users/<%= like.users.id %>">
              <%= like.users.email %>
            </a>
          <% end %>
        </td>

        <td>
          <% if like.films.present? %>
            <a href="/films/<%= like.films.id %>">
              <%= like.films.title %>
            </a>
          <% end %>
        </td>

        <td>
          <% if like.shows.present? %>
            <a href="/shows/<%= like.shows.id %>">
              <%= like.shows.title %>
            </a>
          <% end %>
        </td>

        <td>
          <% if like.podcasts.present? %>
            <a href="/podcasts/<%= like.podcasts.id %>">
              <%= like.podcasts.title %>
            </a>
          <% end %>
        </td>

        <td>
          <% if like.articles.present? %>
            <a href="/articles/<%= like.articles.id %>">
              <%= like.articles.users_id %>
            </a>
          <% end %>
        </td>

        <td>
          <% if like.books.present? %>
            <a href="/books/<%= like.books.id %>">
              <%= like.books.title %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(like.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(like.updated_at) %> ago
        </td>

        <td>
          <a href="/likes/<%= like.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @likes, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
