<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Like #<%= @like.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/likes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @like.users %>
          <a href="/likes/<%= @like.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit like
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @like.users %>
          <a href="/delete_like/<%= @like.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete like
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Users
      </dt>
      <dd>
        <% if @like.users.present? %>
          <a href="/users/<%= @like.users_id %>">
            <%= @like.users.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Films
      </dt>
      <dd>
        <% if @like.films.present? %>
          <a href="/films/<%= @like.films_id %>">
            <%= @like.films.title %>
          </a>
        <% end %>
      </dd>

      <dt>
        Shows
      </dt>
      <dd>
        <% if @like.shows.present? %>
          <a href="/shows/<%= @like.shows_id %>">
            <%= @like.shows.title %>
          </a>
        <% end %>
      </dd>

      <dt>
        Podcasts
      </dt>
      <dd>
        <% if @like.podcasts.present? %>
          <a href="/podcasts/<%= @like.podcasts_id %>">
            <%= @like.podcasts.title %>
          </a>
        <% end %>
      </dd>

      <dt>
        Articles
      </dt>
      <dd>
        <% if @like.articles.present? %>
          <a href="/articles/<%= @like.articles_id %>">
            <%= @like.articles.users_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Books
      </dt>
      <dd>
        <% if @like.books.present? %>
          <a href="/books/<%= @like.books_id %>">
            <%= @like.books.title %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@like.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@like.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

