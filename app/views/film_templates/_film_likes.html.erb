<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Likes

    <a data-toggle="collapse" href="#film_likes_new_form">
      Add like
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @film.likes.each do |like| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/likes/<%= like.id %>">
          <%= like.users_id %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_like_from_films/<%= like.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="film_likes_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "film_templates/film_likes_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
