<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All films
    </h1>

    <a href="/films/new" class="btn btn-block btn-outline-secondary">
      Add a new film
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "film_templates/films_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Source
        </th>

        <th>
          Users
        </th>

        <th>
          Genre topic
        </th>

        <th>
          Description
        </th>

        <th>
          Comments
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @films.each do |film| %>
      <tr>
        <td>
          <%= film.id %>
        </td>

        <td>
          <%= film.title %>
        </td>

        <td>
          <%= film.source %>
        </td>

        <td>
          <% if film.users.present? %>
            <a href="/users/<%= film.users.id %>">
              <%= film.users.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= film.genre_topic %>
        </td>

        <td>
          <%= film.description %>
        </td>

        <td>
          <%= film.comments %>
        </td>

        <td>
          <%= time_ago_in_words(film.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(film.updated_at) %> ago
        </td>

        <td>
          <a href="/films/<%= film.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @films, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
