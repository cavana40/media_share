<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All films
    </h1>

    <a href="/films/new" class="btn btn-block btn-outline-secondary">
      Add a new film
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Source
        </th>

        <th>
          Users
        </th>

        <th>
          Genre topic
        </th>

        <th>
          Description
        </th>

        <th>
          Comments
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @films.each do |film| %>
      <tr>
        <!-- Display film.id start -->
        <td>
          <%= film.id %>
        </td>
        <!-- Display film.id end -->

        <!-- Display film.title start -->
        <td>
          <%= film.title %>
        </td>
        <!-- Display film.title end -->

        <!-- Display film.source start -->
        <td>
          <%= film.source %>
        </td>
        <!-- Display film.source end -->

        <!-- Display film.users_id start -->
        <td>
          <%= film.users.email %>
        </td>
        <!-- Display film.users_id end -->

        <!-- Display film.genre_topic start -->
        <td>
          <%= film.genre_topic %>
        </td>
        <!-- Display film.genre_topic end -->

        <!-- Display film.description start -->
        <td>
          <%= film.description %>
        </td>
        <!-- Display film.description end -->

        <!-- Display film.comments start -->
        <td>
          <%= film.comments %>
        </td>
        <!-- Display film.comments end -->

        <!-- Display film.created_at start -->
        <td>
          <%= time_ago_in_words(film.created_at) %> ago
        </td>
        <!-- Display film.created_at end -->

        <!-- Display film.updated_at start -->
        <td>
          <%= time_ago_in_words(film.updated_at) %> ago
        </td>
        <!-- Display film.updated_at end -->

        <td>
          <a href="/films/<%= film.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @films, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
