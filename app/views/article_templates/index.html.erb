<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All articles
    </h1>

    <a href="/articles/new" class="btn btn-block btn-outline-secondary">
      Add a new article
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Author
        </th>

        <th>
          Link
        </th>

        <th>
          Users
        </th>

        <th>
          Genre topic
        </th>

        <th>
          Description
        </th>

        <th>
          Comments
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @articles.each do |article| %>
      <tr>
        <!-- Display article.id start -->
        <td>
          <%= article.id %>
        </td>
        <!-- Display article.id end -->

        <!-- Display article.title start -->
        <td>
          <%= article.title %>
        </td>
        <!-- Display article.title end -->

        <!-- Display article.author start -->
        <td>
          <%= article.author %>
        </td>
        <!-- Display article.author end -->

        <!-- Display article.link start -->
        <td>
          <%= article.link %>
        </td>
        <!-- Display article.link end -->

        <!-- Display article.users_id start -->
        <td>
          <%= article.users.email %>
        </td>
        <!-- Display article.users_id end -->

        <!-- Display article.genre_topic start -->
        <td>
          <%= article.genre_topic %>
        </td>
        <!-- Display article.genre_topic end -->

        <!-- Display article.description start -->
        <td>
          <%= article.description %>
        </td>
        <!-- Display article.description end -->

        <!-- Display article.comments start -->
        <td>
          <%= article.comments %>
        </td>
        <!-- Display article.comments end -->

        <!-- Display article.created_at start -->
        <td>
          <%= time_ago_in_words(article.created_at) %> ago
        </td>
        <!-- Display article.created_at end -->

        <!-- Display article.updated_at start -->
        <td>
          <%= time_ago_in_words(article.updated_at) %> ago
        </td>
        <!-- Display article.updated_at end -->

        <td>
          <a href="/articles/<%= article.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @articles, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
