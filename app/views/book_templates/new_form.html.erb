<h1>
  Add a new book
</h1>


<hr>

<!-- Form book start -->
<form action="/create_book" method="post">
<!-- Form book end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <!-- Input for title start -->
    <input type="text" id="title" name="title" class="form-control">
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <!-- Label and input for author start -->
  <div class="form-group">
    <label for="author">
      Author
    </label>

    <!-- Input for author start -->
    <input type="text" id="author" name="author" class="form-control">
    <!-- Input for author end -->
  </div>
  <!-- Label and input for author end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <textarea id="description" name="description" class="form-control" rows="3"></textarea>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for users_id start -->
  <div class="form-group">
    <label for="users_id">
      Users
    </label>

    <!-- Input for users_id start -->
    <%= select_tag(:users_id, options_from_collection_for_select(User.all, :id, :email, @book.users_id), :class => "form-control") %>
    <!-- Input for users_id end -->
  </div>
  <!-- Label and input for users_id end -->

  <!-- Label and input for genre_topic start -->
  <div class="form-group">
    <label for="genre_topic">
      Genre topic
    </label>

    <!-- Input for genre_topic start -->
    <input type="text" id="genre_topic" name="genre_topic" class="form-control">
    <!-- Input for genre_topic end -->
  </div>
  <!-- Label and input for genre_topic end -->

  <!-- Label and input for comments start -->
  <div class="form-group">
    <label for="comments">
      Comments
    </label>

    <!-- Input for comments start -->
    <textarea id="comments" name="comments" class="form-control" rows="3"></textarea>
    <!-- Input for comments end -->
  </div>
  <!-- Label and input for comments end -->

  <button class="btn btn-block btn-outline-secondary">
    Create book
  </button>
</form>

<hr>

<a href="/books">
  Go back
</a>
