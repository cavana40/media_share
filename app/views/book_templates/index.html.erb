<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All books
    </h1>

    <a href="/books/new" class="btn btn-block btn-outline-secondary">
      Add a new book
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Author
        </th>

        <th>
          Description
        </th>

        <th>
          Users
        </th>

        <th>
          Genre topic
        </th>

        <th>
          Comments
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @books.each do |book| %>
      <tr>
        <!-- Display book.id start -->
        <td>
          <%= book.id %>
        </td>
        <!-- Display book.id end -->

        <!-- Display book.title start -->
        <td>
          <%= book.title %>
        </td>
        <!-- Display book.title end -->

        <!-- Display book.author start -->
        <td>
          <%= book.author %>
        </td>
        <!-- Display book.author end -->

        <!-- Display book.description start -->
        <td>
          <%= book.description %>
        </td>
        <!-- Display book.description end -->

        <!-- Display book.users_id start -->
        <td>
          <%= book.users.email %>
        </td>
        <!-- Display book.users_id end -->

        <!-- Display book.genre_topic start -->
        <td>
          <%= book.genre_topic %>
        </td>
        <!-- Display book.genre_topic end -->

        <!-- Display book.comments start -->
        <td>
          <%= book.comments %>
        </td>
        <!-- Display book.comments end -->

        <!-- Display book.created_at start -->
        <td>
          <%= time_ago_in_words(book.created_at) %> ago
        </td>
        <!-- Display book.created_at end -->

        <!-- Display book.updated_at start -->
        <td>
          <%= time_ago_in_words(book.updated_at) %> ago
        </td>
        <!-- Display book.updated_at end -->

        <td>
          <a href="/books/<%= book.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @books, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
