<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Book #<%= @book.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/books" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @book.users %>
          <a href="/books/<%= @book.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit book
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @book.users %>
          <a href="/delete_book/<%= @book.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete book
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <dd>
        <%= @book.title %>
      </dd>

      <dt>
        Author
      </dt>
      <dd>
        <%= @book.author %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @book.description %>
      </dd>

      <dt>
        Users
      </dt>
      <dd>
        <% if @book.users.present? %>
          <a href="/users/<%= @book.users_id %>">
            <%= @book.users.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Genre topic
      </dt>
      <dd>
        <%= @book.genre_topic %>
      </dd>

      <dt>
        Comments
      </dt>
      <dd>
        <%= @book.comments %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@book.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@book.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "book_templates/book_likes" %>
  </div>
</div>
